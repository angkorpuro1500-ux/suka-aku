  <script>
    const tidakBtn = document.getElementById('tidakBtn');
    const popup = document.getElementById('popup');

    // Tombol "TIDAK" kabur saat didekati
    tidakBtn.addEventListener('mouseover', () => {
      const x = Math.random() * (window.innerWidth - tidakBtn.offsetWidth);
      const y = Math.random() * (window.innerHeight - tidakBtn.offsetHeight);
      tidakBtn.style.left = `${x}px`;
      tidakBtn.style.top = `${y}px`;
    });

    // Jika "YA" diklik
    function jawabYa() {
      popup.classList.add('show');
    }

    // Efek hati jatuh
    setInterval(() => {
      const heart = document.createElement('div');
      heart.classList.add('heart');
      heart.innerHTML = 'üíñ';
      heart.style.left = Math.random() * 100 + 'vw';
      heart.style.animationDuration = Math.random() * 3 + 2 + 's';
      document.body.appendChild(heart);
      setTimeout(() => heart.remove(), 5000);
    }, 400);
  </script>
